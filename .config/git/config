; vim: ft=gitconfig
[user]
	email = ribru17@hotmail.com
	name = Riley Bruins
[core]
	editor = nvim
	excludesFile = ~/.config/git/.gitignore.global
	pager = delta
[interactive]
	diffFilter = delta --color-only
[pager]
	blame  = delta
	diff   = delta
	reflog = delta
	show   = delta
[credential]
	helper = libsecret
[delta]
	line-numbers = true
	features = decorations
	navigate = true
	side-by-side = false
	syntax-theme = bamboo_multiplex
[delta "decorations"]
	file-decoration-style = bold yellow ul
	file-style = purple bold
	hunk-header-decoration-style = yellow box ul
	hunk-header-file-style = yellow
	hunk-header-line-number-style = grey bold italic
	hunk-header-style = line-number syntax italic
	line-numbers-minus-style = red bold italic
	line-numbers-plus-style = green bold italic
	line-numbers-zero-style = grey italic
	minus-emph-style = syntax auto
	minus-style = syntax auto
	zero-style = syntax
[alias]
	a = add
	b = branch
	c = commit
	ca = commit -a
	d = diff
	db = branch -d
	l = log
	p = push
	po = push origin
	poc = !git push origin $(git symbolic-ref --short HEAD)
	pod = push -u origin master
	pu = pull
	s = show
	st = status
	stat = status
	amend = commit -a --amend --no-edit
	edit = !nvim ~/.config/git/config
	info = !git diff && git remote -v && git status
	move = "!f() { git branch $1 && git reset --hard HEAD~${2-1} && git checkout $1; }; f"
	new = checkout -b
	recommit = reset ORIG_HEAD
	remove = rm --cached
	rename = branch -m
	squash = "!f() { git rebase -i HEAD~$1; }; f"
	unadd = restore --staged
	uncommit = "!f() { git reset HEAD~${1-1}; }; f"
	undo = "!f() { if [ $# -eq 0 ]; then git reset --hard HEAD; else git checkout HEAD -- $@; fi }; f"
[pull]
	rebase = true
[merge]
	tool = vimdiff
	conflictstyle = diff3
[mergetool]
	keepBackup = false
[mergetool "vimdiff"]
	cmd = nvim -d $LOCAL $MERGED $REMOTE -c 'windo set foldcolumn=0 signcolumn=no wrap | wincmd h'
[rebase]
	autoSquash = true
[push]
	autoSetupRemote = true
