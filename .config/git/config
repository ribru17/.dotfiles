; vim: ft=gitconfig
[user]
	email = ribru17@hotmail.com
	name = Riley Bruins
[core]
	editor = nvim
	excludesFile = ~/.config/git/.gitignore.global
	pager = delta
[interactive]
	diffFilter = delta --color-only
[pager]
	blame  = delta
	diff   = delta
	reflog = delta
	show   = delta
[credential]
	helper = libsecret
[delta]
	line-numbers = true
	features = decorations
	navigate = true
	side-by-side = false
	syntax-theme = bamboo
[delta "decorations"]
	file-decoration-style = bold yellow ul
	file-style = yellow bold
	hunk-header-decoration-style = yellow box ul
	hunk-header-file-style = yellow
	hunk-header-line-number-style = grey bold italic
	hunk-header-style = line-number syntax italic
	line-numbers-minus-style = red bold italic
	line-numbers-plus-style = green bold italic
	line-numbers-zero-style = grey italic
	minus-emph-style = syntax auto
	minus-style = syntax auto
	zero-style = syntax
[alias]
	a = add
	b = branch
	c = commit
	ca = commit -a
	d = diff
	db = branch -d
	l = log
	p = push
	po = push origin
	poc = !git push origin $(git symbolic-ref --short HEAD)
	pod = push -u origin master
	s = show
	st = status
	stat = status
	edit = !nvim ~/.config/git/config
	info = !git diff && git remote -v && git status
	new = checkout -b
	recommit = reset ORIG_HEAD
	remove = rm --cached
	squash = "!f() { git rebase -i HEAD~$1; }; f"
	unadd = restore --staged
	uncommit = reset HEAD~1
	undo = reset --hard HEAD
[pull]
	rebase = true
[merge]
	ff = false
	tool = vimdiff
	conflictstyle = diff3
[mergetool]
	keepBackup = false
[mergetool "vimdiff"]
	cmd = nvim -d $LOCAL $MERGED $REMOTE -c 'wincmd l'
[rebase]
	autoSquash = true
[push]
	autoSetupRemote = true
